{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "deploy",
        "sourceMap": true,
        "module": "es2015",
        "target": "ESNEXT",
        "moduleResolution": "node",
        "types": [
            "node",
            "react",
            "react-dom",
            "lodash"
        ],
        "noImplicitAny": false,
        "baseUrl": ".",
        "jsx": "react",
        "allowJs": true,
        "paths": {
            "*/*": [
                "node_modules/*",
                "src/types/*"
            ],
            "src/*": [
                "./src/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./src/components/*"
            ],
        }
    },
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ]
}